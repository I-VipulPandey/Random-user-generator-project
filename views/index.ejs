<!DOCTYPE html>
<html lang="en">

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Random User Card</title>
  <!-- Font Awesome Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" />
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
  <!-- Stylesheet -->
  <link rel="stylesheet" href="../stylesheets/style.css" />
</head>

<body>
  <div class="container">
    <div class="card">
      <div class="img-container">
        <img src="" alt="">
      </div>
      <div class="details">
        <h2>name</h2>
        <h4 id="gender"></h4>
        <h3>email</h3>
        <h4 id="address">address</h4>
      </div>
    </div>
    <button id="get-user-btn">Get Random User</button>
  </div>
  <!-- Script -->
  <script src="script.js"></script>


  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.2/axios.min.js"
    integrity="sha512-NCiXRSV460cHD9ClGDrTbTaw0muWUBf/zB/yLzJavRsPNUl9ODkUVmUHsZtKu17XknhsGlmyVoJxLg/ZQQEeGA=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>

  <script>

    let img = document.querySelector('.img-container img')
    let name = document.querySelector('.details h2')
    let email = document.querySelector('.details h3')
    let address = document.querySelector('#address')
    let gender = document.querySelector('#gender')


    function getUser() {
      axios.get('https://randomuser.me/api/')
      .then(function (user) {
        img.src = user.data.results[0].picture.large;
        
        name.textContent = `${user.data.results[0].name.first} ${user.data.results[0].name.last}`
        email.textContent = `${user.data.results[0].email} `
        gender.textContent = `${user.data.results[0].gender} `
        
        
        
        address.textContent = `${user.data.results[0].location.street.number} ${user.data.results[0].location.street.name} ${user.data.results[0].location.city}, ${user.data.results[0].location.country}`
        
        
        
      })
    }

    window.addEventListener("load", getUser);
    document.querySelector('#get-user-btn').addEventListener('click',getUser)

  </script>

</body>

</html>